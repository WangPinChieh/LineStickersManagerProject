<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>豆媽貼圖小舖</title>
    <link href="~/Content/Site.css?@DateTime.Now.ToString("yyyyMMddhhmmssfff")" rel="stylesheet" type="text/css" />
    <link href="~/Content/MyCSS.css?@DateTime.Now.ToString("yyyyMMddhhmmssfff")" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <script src="~/scripts/angular.min.js"></script>
</head>
<body class="text-center">
    
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse"><span style="color: white;">Menu</span></button>
                @Html.ActionLink("豆媽貼圖小舖", "Index", "Main", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            @{ if (this.User.Identity.IsAuthenticated)
                {
                    @:<div class="navbar-collapse collapse">
                    @:    <ul class="nav navbar-nav">
                    @:        <li>@Html.ActionLink("首頁", "Index", "Main")</li>
                    @:        <li>@Html.ActionLink("下單", "Index", "Order")</li>
                    @:        <li>@Html.ActionLink("登出", "Logout", "Account")</li>
                    @:    </ul>
                    @:</div>
                } }
            
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - 豆媽貼圖小舖</p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>